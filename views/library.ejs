<%- include("header") -%>

<div class="box" id="heading">
  <h1>My Library</h1>
</div>

<div class="box">
  <% libToDisplay.forEach(function(item){%>
  <form action="/delete" method="post">
    <div class="box">
      <p><%= item.title %></p>
      <p><%= item.url %></p>
      <p>
        <a href="http://<%= item.url %>" class="btn btn-primary" role="button">
          Download
        </a>
      </p>
    </div>
  </form>
  <% });%>

  <form class="" action="/compose" method="post">
    <div class="form-group">
      <label>Add more</label>
      <label>Title</label>
      <input class="form-control" type="text" name="postTitle" />
      <label>URL Link</label>
      <textarea
        class="form-control"
        name="postBody"
        rows="2"
        cols="30"
      ></textarea>
    </div>
    <button
      style="width: 150px"
      class="btn btn-primary"
      type="submit"
      name="button"
    >
      Publish
    </button>
  </form>
</div>

<%- include("footer") -%>
